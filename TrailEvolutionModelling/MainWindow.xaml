<Window x:Class="TrailEvolutionModelling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mapsui="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        xmlns:local="clr-namespace:TrailEvolutionModelling"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" Loaded="OnWindowLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="798*"/>
            <ColumnDefinition Width="32"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <mapsui:MapControl x:Name="mapControl" Grid.ColumnSpan="2" Margin="0" Grid.RowSpan="2"/>
        <ToolBarTray Orientation="Vertical" Grid.Column="2" Grid.RowSpan="2">
            <ToolBar Margin="0" ToolBarTray.IsLocked="True">
                <ToggleButton Name="polygonToolButton" Height="27" Checked="PolygonTool_Checked" Unchecked="PolygonTool_Unchecked">
                    <Image Source="Resources/PolygonTool.png" d:IsLocked="True"/>
                </ToggleButton>
            </ToolBar>
        </ToolBarTray>
    </Grid>
</Window>
